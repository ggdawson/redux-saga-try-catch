{
  "exclude": [
    "**/*.test.ts",
    "node_modules"
  ],

  "include": [ "src/**/*.ts" ],

  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "es5",

    "lib": [
      "dom",
      "esnext"
    ],

    "paths": {
      "@/*": ["src/*"]
    },

    "plugins": [
      { "name": "tslint-language-service"}
    ]
  }
}
