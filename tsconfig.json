{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "target": "es5",

    "lib": [
      "es5",
      "esnext"
    ],

    "paths": {
      "@/*": ["src/*"]
    }
  },

  "exclude": [
    "node_modules"
  ],

  "include": [ 
    "src/**/*.ts" 
  ]
}
