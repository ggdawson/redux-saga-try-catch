{
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],

  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "lib": ["es6", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "target": "es6",

    "paths": {
      "@/*": ["src/*"]
    }
  }
}
